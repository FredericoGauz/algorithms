{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",

    "ts-node": {
        "skipTypeCheck": true
    },
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "commonjs",
        "target": "ESNext",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "forceConsistentCasingInFileNames": true,

        "sourceMap": true,
        "outDir": "dist"
    }
}
